<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start|center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_layout_height"
        android:layout_marginLeft="@dimen/linear_layout_marginLeft"
        android:layout_marginStart="@dimen/linear_layout_marginStart"
        android:layout_marginRight="@dimen/linear_layout_marginRight"
        android:layout_marginEnd="@dimen/linear_layout_marginRight"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_shirt_size"
            android:layout_width="@dimen/txt_shirt_size_layout_width"
            android:layout_height="@dimen/txt_shirt_size_layout_height"
            android:background="@drawable/shape_shirt_size"
            android:gravity="center|center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_shirt_size_textSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/linear_layout_marginLeft"
            android:layout_marginStart="@dimen/linear_layout_marginStart"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="start|center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/txt_name_textSize"/>

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textSize="@dimen/txt_email_textSize"
                android:textColor="@color/secundary_text" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/view_separator_layout_marginLeft"
        android:layout_marginStart="@dimen/view_separator_layout_marginStart"
        android:layout_marginTop="@dimen/view_separator_layout_marginTop"
        android:background="@color/divider"/>
</FrameLayout>
