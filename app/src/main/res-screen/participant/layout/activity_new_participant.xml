<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/window_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_marginLeft="@dimen/linear_layout_marginLeft"
                    android:layout_marginStart="@dimen/linear_layout_marginStart"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_vpn_key_grey600_24dp"
                        android:drawableStart="@drawable/ic_vpn_key_grey600_24dp"
                        android:gravity="center|center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/linear_editText_layout_marginLeft"
                        android:layout_marginStart="@dimen/linear_editText_layout_marginStart"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:hint="@string/code"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textSize="@dimen/txt_name_textSize" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_marginLeft="@dimen/linear_layout_marginLeft"
                    android:layout_marginStart="@dimen/linear_layout_marginStart"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_person_grey600_24dp"
                        android:drawableStart="@drawable/ic_person_grey600_24dp"
                        android:gravity="center|center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/linear_editText_layout_marginLeft"
                        android:layout_marginStart="@dimen/linear_editText_layout_marginStart"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:hint="@string/name"
                            android:inputType="textCapWords"
                            android:singleLine="true"
                            android:textSize="@dimen/txt_name_textSize" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_marginLeft="@dimen/linear_layout_marginLeft"
                    android:layout_marginStart="@dimen/linear_layout_marginStart"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_email_grey600_24dp"
                        android:drawableStart="@drawable/ic_email_grey600_24dp"
                        android:gravity="center|center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/linear_editText_layout_marginLeft"
                        android:layout_marginStart="@dimen/linear_editText_layout_marginStart"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:hint="@string/email"
                            android:inputType="text|textEmailAddress"
                            android:singleLine="true"
                            android:textSize="@dimen/txt_name_textSize" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_marginLeft="@dimen/linear_layout_marginLeft"
                    android:layout_marginStart="@dimen/linear_layout_marginStart"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_phone_grey600_24dp"
                        android:drawableStart="@drawable/ic_phone_grey600_24dp"
                        android:gravity="center|center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/linear_editText_layout_marginLeft"
                        android:layout_marginStart="@dimen/linear_editText_layout_marginStart"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:hint="@string/phone"
                            android:inputType="phone"
                            android:singleLine="true"
                            android:textSize="@dimen/txt_name_textSize" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_marginLeft="@dimen/linear_layout_marginLeft"
                    android:layout_marginStart="@dimen/linear_layout_marginStart"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_business_grey600_24dp"
                        android:drawableStart="@drawable/ic_business_grey600_24dp"
                        android:gravity="center|center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/linear_editText_layout_marginLeft"
                        android:layout_marginStart="@dimen/linear_editText_layout_marginStart"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start|center_vertical"
                            android:hint="@string/company"
                            android:inputType="textCapWords"
                            android:singleLine="true"
                            android:textSize="@dimen/txt_name_textSize" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_marginLeft="@dimen/linear_layout_marginLeft"
                    android:layout_marginStart="@dimen/linear_layout_marginStart"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:tint="@color/shirt_size_m"
                        android:id="@+id/img_sex"
                        android:contentDescription="@string/app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_android_grey600_24dp"
                        android:gravity="center|center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/linear_editText_layout_marginLeft"
                        android:layout_marginStart="@dimen/linear_editText_layout_marginStart"
                        android:orientation="vertical">

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/sw_sex"
                            android:paddingStart="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="0dp"
                            android:paddingEnd="0dp"
                            android:textOn="@string/sex_f"
                            android:textOff="@string/sex_m"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/linear_layout_height"
                            android:gravity="start|center_vertical"
                            android:text="@string/male" />
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/activity_new_participant_shirt_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/linear_layout_height"
                    android:layout_marginLeft="@dimen/linear_layout_marginLeft"
                    android:layout_marginStart="@dimen/linear_layout_marginStart"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_event_grey600_24dp"
                        android:drawableStart="@drawable/ic_event_grey600_24dp"
                        android:gravity="center|center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/linear_editText_layout_marginLeft"
                        android:layout_marginStart="@dimen/linear_editText_layout_marginStart"
                        android:orientation="vertical">

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/sw_attend"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/linear_layout_height"
                            android:textOn="@string/yes"
                            android:textOff="@string/no"
                            android:gravity="start|center_vertical"
                            android:text="@string/confirm_participation_event" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>