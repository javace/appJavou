<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start|center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_layout_height"
        android:layout_marginLeft="@dimen/linear_layout_marginLeft"
        android:layout_marginStart="@dimen/linear_layout_marginStart"
        android:layout_marginRight="@dimen/linear_layout_marginRight"
        android:layout_marginEnd="@dimen/linear_layout_marginRight"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtShirtSize"
            android:layout_width="@dimen/txtShirtSize_layout_width"
            android:layout_height="@dimen/txtShirtSize_layout_height"
            android:background="@drawable/shape_shirt_size"
            android:gravity="center|center_vertical"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txtShirtSize_textSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/linear_layout_marginLeft"
            android:layout_marginStart="@dimen/linear_layout_marginStart"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="start|center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/primaryText"
                android:textSize="@dimen/txtName_textSize"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textSize="@dimen/txtEmail_textSize"
                android:textColor="@color/secundaryText" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/viewSeparator_layout_marginLeft"
        android:layout_marginStart="@dimen/viewSeparator_layout_marginStart"
        android:layout_marginTop="@dimen/viewSeparator_layout_marginTop"
        android:background="@color/dividerColor"/>
</FrameLayout>
